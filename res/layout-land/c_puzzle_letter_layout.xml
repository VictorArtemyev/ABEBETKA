<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/c_letter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bus"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/c_body"
            android:tag="@string/tag_body"/>

        <ImageView
            android:id="@+id/left_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="15dp"
            android:src="@drawable/c_left_hand"
            android:tag="@string/tag_left_hand"/>

        <ImageView
            android:id="@+id/right_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/c_right_hand"
            android:tag="@string/tag_right_hand"/>

        <ImageView
            android:id="@+id/right_leg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="165dp"
            android:src="@drawable/c_right_leg"
            android:tag="@string/tag_right_leg"/>

        <ImageView
            android:id="@+id/left_leg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="255dp"
            android:src="@drawable/c_left_leg"
            android:tag="@string/tag_left_leg"/>

        <View
            android:id="@+id/position_left_leg"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/body"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="200dp"/>

        <View
            android:id="@+id/position_left_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/body"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="90dp"/>

        <View
            android:id="@+id/position_right_hand"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/body"
            android:layout_marginTop="95dp"/>

        <View
            android:id="@+id/position_right_leg"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/body"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="80dp"/>
    </RelativeLayout>

</RelativeLayout>
