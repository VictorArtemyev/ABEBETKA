<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/c_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <AbsoluteLayout
        android:id="@+id/c_move"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/c_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:src="@drawable/v_body_animation"/>

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="121dp"
            android:layout_y="178dp"
            android:src="@drawable/mouth"
            android:tag="@string/tag_mouth"/>

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="67dp"
            android:layout_y="-5dp"
            android:src="@drawable/v_eyes"
            android:tag="@string/tag_eyes"/>

        <ImageView
            android:id="@+id/c_right_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="0dp"
            android:layout_y="94dp"
            android:src="@drawable/v_right_hand"
            android:tag="@string/tag_left_hand"/>

        <ImageView
            android:id="@+id/c_right_leg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="68dp"
            android:layout_y="190dp"
            android:src="@drawable/v_right_leg"
            android:tag="@string/tag_right_leg"/>

        <ImageView
            android:id="@+id/c_left_hand"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_x="196dp"
            android:layout_y="90dp"
            android:src="@drawable/v_left_hand"
            android:tag="@string/tag_left_hand"/>

        <ImageView
            android:id="@+id/c_left_leg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="154dp"
            android:layout_y="188dp"
            android:src="@drawable/v_left_leg"
            android:tag="@string/tag_left_leg"/>
    </AbsoluteLayout>

    <ImageButton
        android:id="@+id/Next_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/c_move"
        android:layout_toRightOf="@+id/c_move"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:onClick="onClick"
        android:background="@drawable/button_next"/>

    <ImageButton
        android:id="@+id/Previous_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/c_move"
        android:layout_toLeftOf="@+id/c_move"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_previous"
        android:onClick="onClick"/>

</RelativeLayout>