<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/a_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/a_move"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/a_body_animation"/>

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/body"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/mouth"
            android:tag="@string/tag_mouth"/>

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/body"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/a_eyes"
            android:tag="@string/tag_eyes"/>

        <ImageView
            android:id="@+id/a_hat"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignStart="@id/body"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/a_hat"
            android:tag="@string/tag_hat"/>

        <ImageView
            android:id="@+id/a_left_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@id/body"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/a_left_hand"
            android:tag="@string/tag_left_hand"/>

        <ImageView
            android:id="@+id/a_right_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@id/body"
            android:layout_alignTop="@id/body"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/a_right_hand"
            android:tag="@string/tag_right_hand"/>
    </RelativeLayout>

    <!--<ImageButton-->
