<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/word_shark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shark_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/word_shark"
        android:tag="image_black"/>

    <ImageView
        android:id="@+id/a1_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shark_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/k_black"
        android:src="@drawable/letter_a_black"
        android:tag="a1_black"/>

    <ImageView
        android:id="@+id/k_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shark_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/y_black"
        android:src="@drawable/letter_k_black"
        android:tag="k_black"/>

    <ImageView
        android:id="@+id/y_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shark_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/letter_u_black"
        android:tag="y_black"/>

    <ImageView
        android:id="@+id/l_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shark_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/y_black"
        android:src="@drawable/letter_l_black"
        android:tag="l_black"/>

    <ImageView
        android:id="@+id/a2_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shark_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/l_black"
        android:src="@drawable/letter_a_black"
        android:tag="a2_black"/>

    <!--====================Color Letters====================-->

    <ImageView
        android:id="@+id/y_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shark_image"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@id/shark_image"
        android:src="@drawable/letter_u"
        android:tag="y"/>

    <ImageView
        android:id="@+id/l_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shark_image"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/shark_image"
        android:src="@drawable/letter_l"
        android:tag="l"/>

    <ImageView
        android:id="@+id/a2_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shark_image"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/shark_image"
        android:src="@drawable/letter_a"
        android:tag="a2"/>

    <ImageView
        android:id="@+id/a1_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shark_image"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/shark_image"
        android:src="@drawable/letter_a"
        android:tag="a1"/>

    <ImageView
        android:id="@+id/k_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shark_image"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/shark_image"
        android:src="@drawable/letter_k"
        android:tag="k"/>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_home"
        android:onClick="onClick"
        android:tag="_black"/>

    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next"
        android:onClick="onClick"
        android:tag="_black"/>
</RelativeLayout>