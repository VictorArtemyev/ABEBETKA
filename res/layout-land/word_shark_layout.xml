<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/word_shark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/shark_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/word_shark"
            android:tag="image_black"/>

        <ImageView
            android:id="@+id/a1_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shark_image"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/k_black"
            android:src="@drawable/a_black"
            android:tag="a1_black"/>

        <ImageView
            android:id="@+id/k_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shark_image"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/y_black"
            android:src="@drawable/k_black"
            android:tag="k_black"/>

        <ImageView
            android:id="@+id/y_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shark_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/y_black"
            android:tag="y_black"/>

        <ImageView
            android:id="@+id/l_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shark_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/y_black"
            android:src="@drawable/l_black"
            android:tag="l_black"/>

        <ImageView
            android:id="@+id/a2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shark_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/l_black"
            android:src="@drawable/a_black"
            android:tag="a2_black"/>

        <ImageView
            android:id="@+id/a1_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/a"
            android:tag="a1"/>

        <ImageView
            android:id="@+id/k_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/k"
            android:tag="k"/>

        <ImageView
            android:id="@+id/y_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/y"
            android:tag="y"/>

        <ImageView
            android:id="@+id/l_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/l"
            android:tag="l"/>

        <ImageView
            android:id="@+id/a2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/a"
            android:tag="a2"/>
</RelativeLayout>