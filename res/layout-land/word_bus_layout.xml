<RelativeLayout
    android:id="@+id/word_bus"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bus_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/word_bus"
        android:tag="image_black"/>

    <ImageView
        android:id="@+id/a_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/v_black"
        android:src="@drawable/a_black"
        android:tag="a_black"/>

    <ImageView
        android:id="@+id/v_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/t_black"
        android:src="@drawable/v_black"
        android:tag="v_black"/>

    <ImageView
        android:id="@+id/t_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/o_black"
        android:src="@drawable/t_black"
        android:tag="t_black"/>

    <ImageView
        android:id="@+id/o_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/o_black"
        android:tag="o_black"/>

    <ImageView
        android:id="@+id/b_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/o_black"
        android:src="@drawable/b_black"
        android:tag="b_black"/>

    <ImageView
        android:id="@+id/y_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/b_black"
        android:src="@drawable/y_black"
        android:tag="y_black"/>

    <ImageView
        android:id="@+id/c_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/y_black"
        android:src="@drawable/c_black"
        android:tag="c_black"/>

    <!--====================Color Letters====================-->

    <ImageView
        android:id="@+id/a_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/a"
        android:tag="a"/>

    <ImageView
        android:id="@+id/v_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/v"
        android:tag="v"/>

    <ImageView
        android:id="@+id/t_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="120dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/t"
        android:tag="t"/>

    <ImageView
        android:id="@+id/b_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="190dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/b"
        android:tag="b"/>

    <ImageView
        android:id="@+id/o_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/o"
        android:tag="o"/>

    <ImageView
        android:id="@+id/y_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/y"
        android:tag="y"/>

    <ImageView
        android:id="@+id/c_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/c"
        android:tag="c"/>

</RelativeLayout>