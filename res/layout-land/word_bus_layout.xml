<RelativeLayout
    android:id="@+id/word_bus"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bus_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/word_bus"
        android:tag="image_black"/>

    <ImageView
        android:id="@+id/a_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/v_black"
        android:src="@drawable/letter_a_black"
        android:tag="a_black"/>

    <ImageView
        android:id="@+id/v_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/t_black"
        android:src="@drawable/letter_v_black"
        android:tag="v_black"/>

    <ImageView
        android:id="@+id/t_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/o_black"
        android:src="@drawable/letter_t_black"
        android:tag="t_black"/>

    <ImageView
        android:id="@+id/o_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/letter_o_black"
        android:tag="o_black"/>

    <ImageView
        android:id="@+id/b_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/o_black"
        android:src="@drawable/b_letter_black"
        android:tag="b_black"/>

    <ImageView
        android:id="@+id/y_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/b_black"
        android:src="@drawable/letter_u_black"
        android:tag="y_black"/>

    <ImageView
        android:id="@+id/c_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/y_black"
        android:src="@drawable/letter_s_black"
        android:tag="c_black"/>

    <!--====================Color Letters====================-->

    <ImageView
        android:id="@+id/y_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/letter_u"
        android:tag="y"/>

    <ImageView
        android:id="@+id/a_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/letter_a"
        android:tag="a"/>

    <ImageView
        android:id="@+id/v_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/letter_v"
        android:tag="v"/>

    <ImageView
        android:id="@+id/o_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@id/bus_image"
        android:src="@drawable/letter_o"
        android:tag="o"/>

    <ImageView
        android:id="@+id/c_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/letter_s"
        android:tag="c"/>

    <ImageView
        android:id="@+id/t_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="120dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/letter_t"
        android:tag="t"/>

    <ImageView
        android:id="@+id/b_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bus_image"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/bus_image"
        android:src="@drawable/b_letter"
        android:tag="b"/>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_home"
        android:onClick="onClick"
        android:tag="_black"
        />

    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next"
        android:onClick="onClick"
        android:tag="_black"
        />
</RelativeLayout>