<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/word_pineapple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/pineapple_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/word_pineapple"
            android:tag="image_black"/>

        <ImageView
            android:id="@+id/a1_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/n1_black"
            android:src="@drawable/a_black"
            android:tag="a1_black"/>

        <ImageView
            android:id="@+id/n1_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/a2_black"
            android:src="@drawable/n_black"
            android:tag="n1_black"/>

        <ImageView
            android:id="@+id/a2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/a_black"
            android:tag="a2_black"/>

        <ImageView
            android:id="@+id/n2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/a2_black"
            android:src="@drawable/n_black"
            android:tag="n2_black"/>

        <ImageView
            android:id="@+id/a3_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/n2_black"
            android:src="@drawable/a_black"
            android:tag="a3_black"/>

        <ImageView
            android:id="@+id/c_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pineapple_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/a3_black"
            android:src="@drawable/c_black"
            android:tag="c_black"/>

        <ImageView
            android:id="@+id/a1_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/a"
            android:tag="a1"/>

        <ImageView
            android:id="@+id/n1_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/n"
            android:tag="n1"/>

        <ImageView
            android:id="@+id/n2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/n"
            android:tag="n2"/>

        <ImageView
            android:id="@+id/c_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/c"
            android:tag="c"/>

        <ImageView
            android:id="@+id/a2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/a"
            android:tag="a2"/>

        <ImageView
            android:id="@+id/a3_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/a"
            android:tag="a3"/>

</RelativeLayout>