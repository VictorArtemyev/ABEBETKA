<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/a_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <AbsoluteLayout
        android:id="@+id/a_move"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/a_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:src="@drawable/a_body_animation"/>

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="120dp"
            android:layout_y="170dp"
            android:src="@drawable/mouth"
            android:tag="@string/tag_mouth"/>

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="88dp"
            android:layout_y="33dp"
            android:src="@drawable/a_eyes"
            android:tag="@string/tag_eyes"/>

        <ImageView
            android:id="@+id/a_hat"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_x="38dp"
            android:layout_y="15dp"
            android:src="@drawable/a_hat"
            android:tag="@string/tag_hat"/>

        <ImageView
            android:id="@+id/a_left_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="187dp"
            android:layout_y="132dp"
            android:src="@drawable/a_left_hand"
            android:tag="@string/tag_left_hand"/>

        <ImageView
            android:id="@+id/a_right_hand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/a_right_hand"
            android:layout_x="3dp"
            android:layout_y="86dp"
            android:tag="@string/tag_right_hand"/>
    </AbsoluteLayout>

    <ImageButton
        android:id="@+id/Next_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/a_move"
        android:layout_toRightOf="@+id/a_move"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:onClick="onClick"
        android:background="@drawable/next_button"/>

    <ImageButton
        android:id="@+id/Previous_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/a_move"
        android:layout_toLeftOf="@+id/a_move"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/previous_button"
        android:onClick="onClick"/>
</RelativeLayout>